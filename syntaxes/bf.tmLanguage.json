{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Benfy",
	"patterns": [
		{
			"include": "#multiline_comment"
		},
		{
			"include": "#spacing_policy"
		},
		{
			"include": "#regex"
		},
		{
			"include": "#rule_name"
		},
		{
			"include": "#symbol"
		},
		{
			"include": "#singleline_comment"
		},
		{
			"include": "#rule_ref"
		}
	],
	"repository": {
		"spacing_policy": {
			"name": "keyword.control.less",
			"match": "\"strict\"|\"loose\""
		},
		"regex": {
			"name": "string.regexp",
			"match": "\\/(\\\\/|[^/])*\\/([slmi]*)",
			"captures": {
				"2": {
					"name": "keyword.control.less"
				}
			}
		},
		"rule_name": {
			"name": "entity.name.type",
			"match": "^[a-zA-Z][a-zA-Z0-9_]*"
		},
		"symbol": {
			"name": "keyword.operator.new",
			"match": ":|>>|\\?|\\+|\\*|!|\\|"
		},
		"multiline_comment": {
			"name": "comment.block",
			"begin": "##",
			"end": "##"
		},
		"singleline_comment": {
			"name": "comment.line",
			"match": "#.*"
		},
		"rule_ref": {
			"name": "entity.name.function",
			"match": "[a-zA-Z][a-zA-Z0-9_]*"
		}
	},
	"scopeName": "source.bf"
}
